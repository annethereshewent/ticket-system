<%= form_for ([@user, @ticket]) do |f| %> 
	<div class="form-panel">
		<%= @ticket.ticket_status == 2 ? '<h2 style="font-size:30px;text-align:center">** CLOSED **</h2>'.html_safe : "" %>
		<h2><%= "#{ticket.id} - #{ticket.title}"%></h2>
		<div class="inputs">
			<%= f.label :title, class: "frm-ctrl" %>
			<%= f.text_field :title, class: "frm-ctrl txt"  %>
		</div>
		<div class="inputs">
			<%= f.label :application, class: "frm-ctrl" %>
			<%= collection_select(:ticket, :application, @applications, :id, :name) %>
		</div>
		<div class="inputs">
			<%= f.label :status, class: "frm-ctrl" %>
			<%= collection_select(:ticket, :ticket_status, @t_statuses, :id, :status) %>
		</div>
		<div class="inputs">
			<%= f.label :summary, class: "frm-ctrl" %>
			<%= f.text_area :summary, class: "frm-ctrl" %>
		</div>
		<div class="inputs">
			<%= f.submit "Save", class: "frm-ctrl btn btn-main" %> 
		</div>		
	</div>
	
<% end %>